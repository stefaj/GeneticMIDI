<Controls:MetroWindow x:Class="Visualizer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls" 
        xmlns:oxy="http://oxyplot.org/wpf"
        Title="MainWindow" Height="739" Width="934">
    <Grid>
        <TabControl Margin="10">
            <TabItem Header="Play">
                <Grid Background="#FFE5E5E5">
                    <oxy:PlotView x:Name="midiPlot" Margin="-1,38,1,362"/>
                    <Button HorizontalAlignment="Left" VerticalAlignment="Top" Width="48" Height="48" Margin="401,585,0,0" Click="Button_Click_1">

                    </Button>
                    <RadioButton x:Name="playGuideRad" Content="Guide" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" IsChecked="True"/>
                    <RadioButton x:Name="playCompRad" Content="Composed Piece" HorizontalAlignment="Left" Margin="115,10,0,0" VerticalAlignment="Top"/>
                </Grid>

            </TabItem>
            <TabItem Header="Generate">
                <Grid>
                    <Label Content="Procedure" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
                    <ComboBox x:Name="procedureCombo" HorizontalAlignment="Left" Margin="91,10,0,0" VerticalAlignment="Top" Width="214" SelectedIndex="1" SelectionChanged="procedureCombo_SelectionChanged">
                        <ComboBoxItem>Markov Chain</ComboBoxItem>
                        <ComboBoxItem>Genetic Algorithm</ComboBoxItem>
                    </ComboBox>
                    <TabControl x:Name="optionsTab" HorizontalAlignment="Right" Margin="0,41,10,10" Width="429" SelectedIndex="1">
                        <TabItem Header="MC" FontSize="8" Controls:ControlsHelper.HeaderFontSize="18" Height="30">
                            <Grid/>
                        </TabItem>
                        <TabItem x:Name="tabGA" Header="GA" Controls:ControlsHelper.HeaderFontSize="18">
                            <Grid>
                                <Label Content="Metrics:" HorizontalAlignment="Left" Margin="10,42,0,0" VerticalAlignment="Top"/>
                                <CheckBox x:Name="metricChromaticTone" Content="Chromatic Tone" HorizontalAlignment="Left" Margin="10,73,0,0" VerticalAlignment="Top" IsChecked="True"/>
                                <CheckBox x:Name="metricChromaticToneDistance" Content="Chromatic Tone Distance" HorizontalAlignment="Left" Margin="202,73,0,0" VerticalAlignment="Top"/>
                                <CheckBox x:Name="metricChromaticToneDuration" Content="Chromatic Tone Duration" HorizontalAlignment="Left" Margin="10,96,0,0" VerticalAlignment="Top"/>
                                <CheckBox x:Name="metricMelodicBigram" Content="Melodic Bigram" HorizontalAlignment="Left" Margin="202,96,0,0" VerticalAlignment="Top"/>
                                <CheckBox x:Name="metricMelodicInterval" Content="Melodic Interval" HorizontalAlignment="Left" Margin="10,119,0,0" VerticalAlignment="Top"/>
                                <CheckBox x:Name="metricPitch" Content="Pitch" HorizontalAlignment="Left" Margin="202,119,0,0" VerticalAlignment="Top"/>
                                <CheckBox x:Name="metricPitchDistance" Content="Pitch Distance" HorizontalAlignment="Left" Margin="10,142,0,0" VerticalAlignment="Top"/>
                                <CheckBox x:Name="metricRhythm" Content="Rhythm" HorizontalAlignment="Left" Margin="202,142,0,0" VerticalAlignment="Top"/>
                                <CheckBox x:Name="metricRhythmicBigram" Content="Rhymthic Bigram" HorizontalAlignment="Left" Margin="10,165,0,0" VerticalAlignment="Top"/>
                                <CheckBox x:Name="metricRhythmicInterval" Content="Rhythmic Interval" HorizontalAlignment="Left" Margin="202,165,0,0" VerticalAlignment="Top"/>
                                <ComboBox x:Name="fitnessFuncCombo" HorizontalAlignment="Left" Margin="132,10,0,0" VerticalAlignment="Top" Width="196" SelectedIndex="0">
                                    <ComboBoxItem>Cosine Similarity</ComboBoxItem>
                                    <ComboBoxItem>Euclidian Similarity</ComboBoxItem>
                                    <ComboBoxItem>Pearson Correlation</ComboBoxItem>
                                    <ComboBoxItem>Cross Correlation</ComboBoxItem>
                                    <ComboBoxItem>Normalized Compression Distance</ComboBoxItem>
                                </ComboBox>
                                <Label Content="Fitness Function&#xD;&#xA;" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="26"/>
                            </Grid>
                        </TabItem>
                    </TabControl>
                    <Label Content="Options" HorizontalAlignment="Right" Margin="0,10,387,0" VerticalAlignment="Top"/>
                    <Button Content="Generate" HorizontalAlignment="Left" Margin="32,367,0,0" VerticalAlignment="Top" Width="130" Click="Button_Click"/>
                    <ComboBox x:Name="guideCombo" HorizontalAlignment="Left" Margin="91,41,0,0" VerticalAlignment="Top" Width="214" SelectedIndex="2" SelectionChanged="guideCombo_SelectionChanged">

                    </ComboBox>
                    <Label Content="Guide" HorizontalAlignment="Left" Margin="10,44,0,0" VerticalAlignment="Top"/>
                    <ProgressBar x:Name="progressGenSlider" HorizontalAlignment="Left" Margin="167,368,0,0" VerticalAlignment="Top" Width="201" Height="24">

                    </ProgressBar>
                    <Label Content="Maximum Iterations" HorizontalAlignment="Left" Margin="10,75,0,0" VerticalAlignment="Top"/>
                    <Slider x:Name="maxGenerationSlider" HorizontalAlignment="Left" Margin="15,106,0,0" VerticalAlignment="Top" Width="290" Minimum="500" Maximum="12000" Value="2000"/>
                    <oxy:PlotView x:Name="fitnessPlot" Margin="15,0,482,6" Height="209" VerticalAlignment="Bottom"/>
                    <Label Content="Average Fitness" HorizontalAlignment="Left" Margin="15,0,0,220" VerticalAlignment="Bottom" Height="26"/>
                </Grid>

            </TabItem>
            <TabItem Header="Metrics">
                <Grid>

                    <StackPanel Orientation="Horizontal" Margin="0,32,0,0">
                        <StackPanel Width="300">
                            <oxy:PlotView x:Name="metricPlot1" Height="200"/>
                            <oxy:PlotView x:Name="metricPlot2" Height="200"/>
                            <oxy:PlotView x:Name="metricPlot3" Height="200"/>
                        </StackPanel>
                        <StackPanel Width="300">
                            <oxy:PlotView x:Name="metricPlot4" Height="200"/>
                            <oxy:PlotView x:Name="metricPlot5" Height="200"/>
                            <oxy:PlotView x:Name="metricPlot6" Height="200"/>
                        </StackPanel>
                        <StackPanel Width="300">
                            <oxy:PlotView x:Name="metricPlot7" Height="200"/>
                            <oxy:PlotView x:Name="metricPlot8" Height="200"/>
                            <oxy:PlotView x:Name="metricPlot9" Height="200"/>
                        </StackPanel>
                    </StackPanel>
                    <RadioButton Content="Guide" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top" Checked="RadioButton_Checked"/>
                    <RadioButton Content="Composed piece" HorizontalAlignment="Left" Margin="91,0,0,0" VerticalAlignment="Top" Checked="RadioButton_Checked_1"/>
                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</Controls:MetroWindow>
